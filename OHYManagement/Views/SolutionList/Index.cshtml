
@{
    ViewBag.Title = "Index";
}
@using OHYModel;
@model List<Solution>
    <h2>解决方案</h2>
<link href="~/Content/css/ohyStyle.css" rel="stylesheet" />
<section>
    <ul>
        <li>
            <label>语言：</label>
            <select id="language" name="language">
                <option @(LanguageEnum.中文 == Language ? "selected" : "") value="@LanguageEnum.中文">@LanguageEnum.中文</option>
                <option @(LanguageEnum.English == Language ? "selected" : "") value="@LanguageEnum.English">@LanguageEnum.English</option>
            </select>
            <a href="/SolutionAdd/index">新增</a>
        </li>
      
    </ul>
    <ul>
        <li>
            @foreach (var par in Model)
            {
            @*<li>
                <label>轮播图：</label><img src="@par.ImgPath" style="width:40%;height:60px;"/>
                <a href="/SolutionUpdate/index?id=@par._id">修改</a>
            </li>*@
                <a href="/SolutionUpdate/index?id=@par._id">
                    <img src="@par.ImgPath" />
                </a>
            }
        </li>
    </ul>
   
</section>
@Html.Partial("PageView");
<script>
    $("#language").change(function () {
        var lan = $("#language").val();
        window.location = "/SolutionList/index?language=" + lan;
    });
</script>