@using OHYUI.Models;
@model IndexModel
@{
    Layout = null;
    var brows = new string[] { "ie", "internetexplorer" };
    bool isIE = brows.Any(e => e == Request.Browser.Browser.ToLower());
}

<!DOCTYPE html>
<html>

<head lang="en">
    <meta http-equiv="X-UA-Compatible" content="chrome=1,IE=Edge" />
    <meta charset="UTF-8">
    <title>@UIHelper.Word("欧华源")</title>
    <link rel="stylesheet" href="~/Content/index.css">
    <link rel="stylesheet" href="~/Scripts/sliderbox/jquery.slideBox.css" />
    <link href="~/Scripts/layer-v2.0/layer/skin/layer.css" rel="stylesheet" />
    <link href="~/Content/font_nt5ogl4mn16k1emi/iconfont.css" rel="stylesheet" />
    <link href="~/Content/ie/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.metadata.js"></script>
    <script src="~/Scripts/cookie.js"></script>
    <script src="~/Scripts/layer-v2.0/layer/layer.js"></script>
    <script src="~/Scripts/sliderbox/jquery.slideBox.min.js"></script>
    <script src="~/pageScripts/index.js"></script>
    <script src="~/Scripts/jplaceholder.js"></script>

    @if (isIE)
    {
        <script src="~/pageScripts/contactie.js"></script>
        <link href="~/Content/ie/css/style.css" rel="stylesheet" />
        <style>
            .bg-color{
                background:none;
            }
        </style>
    }
    else
    {
        <script src="~/pageScripts/contact.js"></script>
        <link href="~/Content/webkit/css/style.css" rel="stylesheet" />
    }
</head>

<body>
    <div class="container">
        <div style="background-image:url('/images/sea.jpg');background-size:cover;">
            <div class="top">
                <a href="#"><img src="/images/classification/LOGO.png" alt=""></a>
                <a href="#" class="language">@(Language.ToString()=="中文"? "English" : "中文")</a>
            </div>
            <div class="nft">
                <ul>
                    <li class="type icon iconfont icon-type">
                        @UIHelper.Word("分类")
                        <div class="cont">
                            <ul>
                                @for (int i = 1; i < Navs.Count; i++)
                                {
                                    var item = Navs[i];
                                    string dataIndex = item.Icon.Split('.')[0];
                                    <li>
                                        <a href="@item.Url">
                                            <img class="typeimg" src="/images/classification/@item.Icon" data-index="@dataIndex" alt="">
                                            <span>@UIHelper.Word(item.Title)</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="news icon iconfont icon-down">
                        @UIHelper.Word("最新")
                        <div>
                            <ul style="background-color:#303030">
                                @foreach (var item in Model.NewsList)
                                {
                                    <li>
                                        <a style="color:white" title="@item.Title" href="@Url.Action("NewsDetail","Detail",new {id= item._id.ToString() })">
                                            @item.Title
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="input-container">
                <form id="myform" method="post" novalidate>
                    <div class="input-box">
                        <h3 class="title">CONTACT FORM</h3>
                        <div class="form-box">
                            <p>
                                <input type="text" required placeholder="@UIHelper.Word("尊称")" name="nickName" />
                            </p>
                            <p>
                                <input type="tel" class="isMobile" required placeholder="@UIHelper.Word("电话")" name="telePhone" />
                            </p>
                            <p>
                                <input type="email" required placeholder="@UIHelper.Word("邮箱")" name="email" />
                            </p>
                            <p>
                                <textarea rows="6" required style="resize:none" placeholder="@UIHelper.Word("您的需求")" name="requirement"></textarea>
                            </p>
                        </div>
                        <div class="btn-box">
                            <button type="reset" class="left">@UIHelper.Word("重置")</button>
                            <button type="submit" class="right">@UIHelper.Word("提交")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div style="background-color: #696969">
            <div class="kh_tuwj">
                @*<div class="infomation">*@
                <div class="LOGO-kh">
                    <img src="/images/LOGO-kh.png" alt="">
                    <div class="info">
                        @for (int i = 0; i < Model.HomeText.Count; i++)
                        {
                            <div class="@(i==0?"active":null) ">
                                <h3 class="title">@Model.HomeText[i].Title</h3>
                                <p>
                                    @Model.HomeText[i].Content
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div style="background-color:#eeeeee">
            <div class="slideBox" style="width:100%;position:absolute;height:100%">
                <ul class="items">
                    @foreach (var item in Model.RightImageList)
                    {
                        <li>
                            <a>
                                <img src="@item.file">
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    @if (isIE)
    {
        <div class="contact" style="top: 260px; opacity: 1;position:static">
            <div class="info" id="info">
                <h3>@UIHelper.Word("在线QQ客服")</h3>
                <ul class="clear">
                    <li class="clear"><span>QQ：2426447725</span></li>
                </ul>
            </div>
            <div class="qq" id="qq">
                <h3>@UIHelper.Word("客服电话")</h3>
                <ul>
                    <li class="clear">
                        <span>@UIHelper.Word("电话")：</span>
                        <p class="clear"><span>13911328472</span></p>
                    </li>
                    <li class="clear" style="position:absolute;margin-top:30px;">
                        <span>@UIHelper.Word("电话")：</span>
                        <p class="clear"><span>010-6334348-808</span></p>
                    </li>
                </ul>
            </div>
            <div class="code" id="code">
                <h3>@UIHelper.Word("微信")</h3>
                <dl class="clear">
                    <dt class="first">
                        <span>
                            <img src="/images/weichart.png" width="78" height="78" alt="">
                            <span>@UIHelper.Word("微信号")</span>
                        </span>
                    </dt>
                    <dt>
                        <span>
                            <img src="/images/rqcode.jpg" width="78" height="78" alt="">
                            <span>@UIHelper.Word("公众号")</span>
                        </span>
                    </dt>
                </dl>
            </div>
        </div>
        <div class="contact" id="contact" style="top: 260px; opacity: 1;background-image: url(/Content/ie/images/us.png);"></div>
    }
    else
    {
        <div class="contact" id="contact" style="right: -80px; top: 260px; opacity: 1;">
            <div class="contactBox" style="transform: rotateZ(-50deg);">
                <i></i>
                <div class="info">
                    <h3>@UIHelper.Word("在线QQ客服")</h3>
                    <ul class="clear">
                        <li class="clear"><span>QQ：2426447725</span></li>
                    </ul>
                </div>
                <div class="qq">
                    <h3>@UIHelper.Word("客服电话")</h3>
                    <ul>
                        <li class="clear">
                            <span>@UIHelper.Word("电话")：</span>
                            <p class="clear"><span>13911328472</span></p>
                        </li>
                        <li class="clear" style="position:absolute;margin-top:30px;">
                            <span>@UIHelper.Word("电话")：</span>
                            <p class="clear"><span>010-6334348-808</span></p>
                        </li>
                    </ul>
                </div>
                <div class="code">
                    <h3>@UIHelper.Word("微信")</h3>
                    <dl class="clear">
                        <dt class="first">
                            <span>
                                <img src="/images/weichart.png" width="78" height="78" alt="">
                                <span>@UIHelper.Word("微信号")</span>
                            </span>
                        </dt>
                        <dt>
                            <span>
                                <img src="/images/rqcode.jpg" width="78" height="78" alt="">
                                <span>@UIHelper.Word("公众号")</span>
                            </span>
                        </dt>
                    </dl>
                </div>
            </div>
        </div>
    }
    <div class="bg-color"></div>
</body>

</html>